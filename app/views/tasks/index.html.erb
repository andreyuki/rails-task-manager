<div class="container">
  <h1>My tasks</h1>
  <div class="">
    <% @tasks.each do |task| %>
      <div class="d-flex align-items-center gap-2">
        <% if task.completed %>
          <i class="fa-regular fa-square-check"></i>
          <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task_path(task), class: 'text-decoration-none' do %>
          <div class="list-group"><span><%= task.title %></span></div>
        <% end %>
        <span>Â·</span>
        <div>
          <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Remove #{task.title}?" },  class: 'text-decoration-none text-secondary' do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>


  <div class="border-top mt-3 text-primary">
    <%= link_to new_task_path, class: "text-decoration-none" do %>
      <i class="fa-solid fa-plus mt-3"></i>
      <span>Add a new task</span>
    <% end %>
  </div>
</div>

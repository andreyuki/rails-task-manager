<div class="container">
  <h1 class="mt-3">Edit Task</h1>
  <% @task.errors.full_messages.each do |msg| %>
    <p class="text-danger"><%= msg %></p>
  <% end %>
  <%= form_with model: @task do |f| %>
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :details, class: "form-label" %>
      <%= f.text_area :details, class: "form-control" %>
      <div class="form-check mt-2">
        <%= f.check_box :completed, class: "form-check-input" %>
        <%= f.label :completed, "Completed", class: "form-check-label" %>
      </div>
      <%= f.submit 'Edit task', class: "btn btn-primary mt-3" %>
  <% end %>

  <div class="border-top mt-3 text-primary">
    <%= link_to tasks_path, class: "text-decoration-none" do %>
      <i class="fa-solid fa-clock-rotate-left mt-3"></i>
      <span>Back to list</span>
    <% end %>
  </div>

</div>
